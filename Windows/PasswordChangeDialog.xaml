<Window x:Class="ForgeTales.Windows.PasswordChangeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменение пароля" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Текущий пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="CurrentPasswordBox" Margin="0,0,0,15"/>

            <TextBlock Text="Новый пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,15"/>

            <TextBlock Text="Подтвердите новый пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Отмена" Width="100" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>